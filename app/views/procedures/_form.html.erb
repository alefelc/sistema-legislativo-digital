<div class="row procedure-form">
  <div class="col-xs-3">
    <%= render 'vertical_navbar' %>
  </div>

  <div class="col-xs-9">
    <div class="tab-content">
      <div class="tab-pane fade in active" id="home">
        <div class="lead box-header with-border">
          <%= t '.load_info' %>
        </div>
        <div class="row">
          <%= render 'info', f: f, procedure: @procedure %>
        </div>
      </div>

      <div class="tab-pane fade" id="administrative-files">
        <p class="lead box-header with-border">Cargue expedientes administrativos</p>
        <%= render 'administrative_files', f: f %>
      </div>

      <div class="tab-pane fade" id="upload">
        <p class="lead box-header with-border">Puede adjuntar todo tipo de archivos</p>
        <%= render 'uploads', f: f %>
      </div>
  </div>

  <div class="box-footer">
    <div class="col-md-12 col-xs-12">
      <%= link_to procedures_path, class: 'btn btn-default pull-left' do %>
        <i class="fa fa-times-circle"></i>
        Cancelar
      <% end %>
      <button class="btn btn-success btn-lg pull-right" type="submit">
        <i class="fa fa-save fa-lg"></i>
        Guardar
      </button>
    </div>
  </div>

</div>
