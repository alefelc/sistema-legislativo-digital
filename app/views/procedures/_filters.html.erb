<div class="modal fade" id="myModal" role="dialog" tabindex="-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header modal-header-warning">
        <button class="close" aria-label="Close" data-dismiss="modal" type="button">
          <span class="fa-lg" aria-hidden="true">×</span>
        </button>
        <h3 class="text-center modal-title"> Filtrando trámites </h3>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :filter_type, "Tipo de trámite" %>
                  <%= select_tag :filter_type, filter_types, multiple: true, class: 'form-control input-lg' %>
            </div>
            <div class="form-group">
              <%= label_tag :filter_administrative_file, "Expedientes administrativos" %>
              <%= select_tag :filter_administrative_file, {}, class: "form-control input-lg" %>
            </div>
            <div class="form-group">
              <%= label_tag :filter_legislative_file, "Expedientes legislativos" %>
              <%= select_tag :filter_legislative_file, {}, class: "form-control input-lg" %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag :filter_period, "Período Legislativo" %>
              <%= select_tag :filter_period, select_periods, class: "form-control input-lg" %>
            </div>
            <div class="form-group">
              <%= label_tag :filter_status, "Estados del trámite" %>
              <%= select_tag :filter_status, select_procedure_status, class: "form-control input-lg" %>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              <%= label_tag :filter_initiators, "Iniciadores" %>
              <%= select_tag :filter_initiators, {}, class: "form-control  input-lg" %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-default btn-lg pull-left clear-filters" type="button" data-dismiss="modal">
          <i class="fa fa-trash"></i>
          Limpiar
        </button>
        <button class="btn btn-primary btn-lg pull-right apply-filters" type="button" data-dismiss="modal">
          <i class="fa fa-search fa-lg"></i>
          Buscar
        </button>
      </div>
    </div>
  </div>
</div>
