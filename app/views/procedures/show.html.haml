#procedure-show
  %h2
    = "Trámite nro: "
    %b= "#{@procedure.id}"

  .box.box-primary
    .lead.box-header.with-border
      Tipo de trámite:
      - if @procedure.type.present?
        %b= I18n.t("procedures.types.#{@procedure.type}")
      - else
        %i.small= t('.not_specified')
    .box-body
      .col-md-6.form-group
        %label Asunto
        %span.form-control= @procedure.topic
      .col-md-6.form-group
        %label Fojas
        %span.form-control= @procedure.sheets
      .col-md-6.form-group
        %label Observaciones
        %span.form-control= @procedure.observations
