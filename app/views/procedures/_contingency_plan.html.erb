<div class="box box-danger collapsed-box">
  <div class="box-header with-border">
    <h3 class="box-title">
      Plan de contingencia
    </h3>
    <div class="box-tools pull-right">
      <button class="btn btn-box-tool" data-widget="<%= :collapse %>" type="<%= :button %>">
        <div class="fa fa-plus"></div>
      </button>
    </div>
  </div>
  <%= f.fields_for :contingency_plan do |cp| %>
    <div class="row box-body" style="display: none">
      <div class="form-group col-md-6">
        <%= cp.label :date_at, "Fecha y hora" %>
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-clock-o"></i>
          </div>
          <%= cp.text_field :date_at, class: 'form-control pull-right', placeholder: 'Fecha y hora de la contingencia' %>
        </div>
      </div>
      <div class="form-group col-md-12">
        <%= cp.label :reason, 'Causa' %>
        <%= cp.text_area :reason, class: 'form-control', placeholder: 'Indique el motivo de la contingencia' %>
      </div>
      <div class="form-group col-md-12">
        <%= cp.label :generator, "Creador de la contingencia" %>
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-pencil"></i>
          </div>
          <%= cp.text_field :generator, class: 'form-control pull-right', placeholder: 'Datos de la persona que genera o autoriza esta contingencia' %>
        </div>
      </div>

      <div class="form-group col-md-12">
        <%= cp.label :signatory, "Firmante de la contingencia" %>
        <div class="input-group">
          <div class="input-group-addon">
            <i class="fa fa-pencil"></i>
          </div>
          <%= cp.text_field :signatory, class: 'form-control pull-right', placeholder: 'Datos de la persona que firmÃ³ la contingencia' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
