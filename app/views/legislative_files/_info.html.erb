<div class="lead box-header with-border">
  Puede editar la información del expediente legislativo
</div>

<div class="row">
  <div class="form-group form-group-lg col-md-6">
    <%= f.label :origin_procedure_ids, "Trámite que dió origen a este expediente" %>
    <%= f.select :origin_procedure_ids, {}, {}, multiple: true, class: 'form-control input-lg' do %>
      <% if f.object.origin_procedures.present? %>
        <% f.object.origin_procedures.each do |proc| %>
          <option value="<%= proc.id %>" selected> <%= proc.text %> </option>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="form-group col-md-2">
    <%= f.label :sheets, 'Fojas' %>
    <%= f.text_field :sheets, { class: 'input-lg form-control',
      placeholder: 'Fojas', type: 'number', min: '1', step: '1' } %>
  </div>

  <div class="form-group col-md-4">
    <%= f.label :date, 'Fecha' %>
    <%= f.text_field :date, { value: @loop.date.try(:to_default_s), class: 'input-lg form-control', type: 'date' } %>
  </div>

  <div class="form-group col-md-12">
    <%= f.label :topic, 'Sumario' %>
    <%= f.text_area :topic, class: 'input-lg form-control', placeholder: 'Ingrese sumario' %>
  </div>

  <div class="form-group col-md-12">
    <%= f.label :observations, 'Observaciones' %>
    <%= f.text_area :observations, class: 'form-control',
      placeholder: 'Ingrese observaciones' %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :accumulated_in, 'Acumulado en' %>
    <%= select_tag :accumulated_in, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group col-md-6">
    <%= f.label :physically_attached, 'Adjuntado físicamente' %>
    <%= select_tag :physically_attached, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group col-md-12">
    <%= f.label :tags, 'Voces claves' %>
    <%= select_tag :tags, {}, { class: 'form-control' } %>
  </div>
</div>
