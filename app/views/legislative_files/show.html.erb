<div class="initiators-modal"></div>
<div id="legislative-file-show">
  <h2> Información del Expediente Legislativo </h2>
  <%= form_for @loop, disabled: 'disabled' do |f| %>

    <div class="box box-primary">
      <div class="box-body">
        <div class="row">

          <div class="col-xs-12">

            <div id="info" class="tab-pane fade in active">
              <div class="row box-header lead with-border">
                <div class="col-md-6">
                  Expediente Legislativo nro: <strong> <%= @loop.number %> </strong>
                </div>
                <% if policy(LegislativeFile).update? %>
                  <div class="col-md-6">
                    <div class="pull-right">
                      <%= link_to edit_legislative_file_path, class: 'btn btn-lg btn-warning' do %>
                        <i class="fa fa-lg fa-pencil-square-o"></i>
                        Editar
                      <% end %>
                      <%= link_to '#', class: 'linktoprint btn btn-danger btn-lg',
                        data: { expediente: @loop.id, nro: @loop.number, iniciador: "", asunto: @loop.topic.to_s.upcase, anio: @loop.year } do %>
                        <i class="fa fa-lg fa-print"></i>
                        Imprimir Carátula
                      <% end %>
                    </div>
                  </div>
                  <% end %>
              </div>
              <div class="row">
                <div class="form-group col-md-6">
                  <%= label_tag :procedures, "Trámite" %>
                  <span class="input-lg form-control" disabled>
                    <%= origin_procedure @loop %>
                  </span>
                </div>

                <div class="form-group col-md-2">
                  <%= f.label :sheets, 'Fojas' %>
                  <%= f.text_field :sheets, { class: 'input-lg form-control', placeholder: 'Fojas', type: 'number', min: '1', step: '1' } %>
                </div>

                <div class="form-group col-md-4">
                  <%= f.label :date, 'Fecha' %>
                  <span class="input-lg form-control" disabled>
                    <%= @loop.date %>
                  </span>
                </div>

                <div class="form-group col-md-12">
                  <%= f.label :topic, 'Sumario' %>
                  <%= f.text_area :topic, class: 'input-lg form-control', placeholder: 'No hay sumario' %>
                </div>

                <div class="form-group col-md-12">
                  <%= f.label :observations, 'Observaciones' %>
                  <%= f.text_area :observations, class: 'form-control', placeholder: 'No hay observaciones' %>
                </div>

                <div class="form-group col-md-6">
                  <%= label_tag :accumulated_in, 'Acumulado en' %>
                  <%= text_field_tag :accumulated_in, nil, { class: 'form-control', placeholder: 'No hay expedientes', type: 'number', min: '1', step: '1' } %>
                </div>

                <div class="form-group col-md-6">
                  <%= label_tag :physically_attached, 'Adjuntado físicamente' %>
                  <%= text_field_tag :physically_attached, nil, { class: 'form-control', placeholder: 'No hay expedientes', type: 'number', min: '1', step: '1' } %>
                </div>

                <div class="form-group col-md-12">
                  <%= label_tag :tags, 'Voces claves' %>
                  <%= text_field_tag :tags, '', class: 'form-control', placeholder: 'No hay voces claves/etiquetas' %>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>

    </div>
  <% end -%>
</div>
