<div class="row">
  <div class="col-md-6">
    <h2>
      <%= I18n.t("laws.types.#{@law.law_type}") %>: <%= "#{@law.number} / #{@law.letter} / #{@law.year}" %>
    </h2>
  </div>
  <div class="col-md-6">
    <div class="pull-right">
      <%= link_to edit_law_path(@law), class: 'btn btn-lg btn-warning' do %>
        <i class="fa fa-pencil"></i>
        Editar Norma
      <% end -%>
    </div>
  </div>
</div>

<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Informaci√≥n de la Norma</h3>
  </div>

  <div class="box-body row">
    <%= form_for @law do |f| %>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.label :number %>
          <%= f.text_field :number, type: :number, class: 'form-control', disabled: true %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.label :letter %>
          <%= f.text_field :letter, class: 'form-control', disabled: true %>
        </div>
      </div>
      <div class="col-md-2">
        <div class="form-group">
          <%= f.label :year %>
          <%= f.text_field :year, class: 'form-control', disabled: true %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :law_type %>
          <%= f.select :law_type, law_types, {}, class: 'form-control', disabled: true %>
        </div>
      </div>

    <% end -%>
  </div>
</div>
