<div id="laws-index">
  <h2 class="text-center"> NORMAS </h2>

  <div class="box box-primary">
    <div class="box-header">
      <div class="row">
        <div class="col-md-4">
          <%= link_to new_law_path, class: 'btn btn-primary btn-lg' do %>
            <i class="fa fa-plus-circle fa-lg"></i>
            Nueva Norma
          <% end -%>
        </div>
      </div>
    </div>
    <div class="box-body">
      <table class="table table-striped dataTable table-hover" id="law-table" data-source="<%= laws_path(format: :json) %>">
        <thead>
          <tr>
            <th width='12%'> Número </th>
            <th width='8%'> Tipo </th>
            <th width='10%'> Sesión </th>
            <th width='50%'> Expedientes </th>
            <th width='10%'> Sanción </th>
            <th width='10%'> Adjuntos </th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>
