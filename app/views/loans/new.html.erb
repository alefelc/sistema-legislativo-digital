<div class="new-person-form"></div>

<div class="law-new">
  <h2 class="text-center"> NUEVO PRÉSTAMO </h2>

  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">
        INTRODUZCA LA INFORMACIÓN SOLICITADA PARA COMPLETAR EL PRÉSTAMO
      </h3>
    </div>

    <%= form_for @loan do |form|  %>

      <div class="box-body">
        <%= render 'loan_form', f: form %>
      </div>

      <div class="box-footer">
        <div class="pull-right">
          <%= link_to loans_path, class: 'btn btn-default' do %>
            <i class="fa fa-times-circle"></i> Cancelar
          <% end -%>
          <%= button_tag type: :submit, class: 'btn btn-lg btn-success' do %>
            <i class="fa fa-save fa-lg"></i> Guardar
          <% end -%>
        </div>
      </div>
    <% end -%>
  </div>
</div>
