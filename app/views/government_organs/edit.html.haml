.modal.fade{ role: "dialog", tabindex: "-1" }
  .modal-dialog{ role: "document" }
    .modal-content
      = form_for @government_organ, as: :government_organ, url: government_organ_path, remote: true do |f|

        .modal-header.bg-primary
          %button.close{ "aria-label": "Close", "data-dismiss": "modal", type: "go tobutton" }
            %span{ "aria-hidden": "true" } Ã—
          %h4.modal-title= t '.update_government_organ'

        .modal-body
          .form-group
            = f.label :denominacion
            = f.text_field :denominacion, class: 'form-control'

        .modal-footer
          = f.submit t('.update'), class: 'btn btn-primary', type: :submit
