            <% end %>
            <% if show_link? 'users' %>
              <li class="active">
                <a href="#">
                  <i class="fa fa-circle-o"></i>
                  <%= t '.show_user' %>
                </a>
              </li>
            <% end %>
          </ul>
        </li>
        <li class="treeview">
          <a href="#">
            <i class="fa fa-gear fa-lg"></i>
            <span>
              <%= t '.roles' %>
            </span>
            <i class="fa fa-angle-left pull-right"></i>
          </a>
          <ul class="treeview-menu">
            <li>
              <a href="<%= roles_path %>">
                <i class="fa fa-circle-o"></i>
                <%= t '.all_roles' %>
              </a>
            </li>
            <li>
              <a href="<%= new_role_path %>">
                <i class="fa fa-circle-o"></i>
                <%= t '.new_rol' %>
              </a>
            </li>
            <% if edit_link? 'roles' %>
              <li class="active">
                <a href="#">
                  <i class="fa fa-circle-o"></i>
                  <%= t '.edit_rol' %>
                </a>
              </li>
            <% end %>
            <% if show_link? 'roles' %>
              <li class="active">
                <a href="#">
                  <i class="fa fa-circle-o"></i>
                  <%= t '.show_rol' %>
                </a>
              </li>
            <% end %>
          </ul>
        </li>
        <li class="treeview">
          <a href="#"> <i class="fa fa-gears fa-lg"></i>
            <span>
              <%= t '.parameters' %>
            </span>
            <i class="fa fa-angle-left pull-right"></i>
