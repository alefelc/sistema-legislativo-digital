<div class="authority-new">
  <h2 class="text-center"> Creando nueva Autoridad </h2>

  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title"> Informaci√≥n de la Autoridad </h3>
    </div>

    <%= form_for @authority do |form| %>

      <div class="box-body">
        <%= render 'authority_form', f: form %>
      </div>

      <div class="box-footer">
        <div class="pull-right">
          <%= link_to authorities_path, class: 'btn btn-default' do %>
            <i class="fa fa-times-circle"></i>
            Cancelar
          <% end -%>
          <%= button_tag type: :submit, class: 'btn btn-lg btn-success' do %>
            <i class="fa fa-save fa-lg"></i>
            Crear Autoridad
          <% end -%>
        </div>
      </div>
    <% end -%>
  </div>
</div>
