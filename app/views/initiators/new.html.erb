<div class="modal fade" data-backdrop="static" id="initiator-new" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for @initiator, url: initiators_path, remote: true do |f| %>

        <div class="modal-header bg-primary">
          <button aria-label="Close" class="close" data-dismiss="modal" type="button">
            <span aria-hidden="true"> × </span>
          </button>
          <h4 class="modal-title"> ¿Quien inicia este tramite? </h4>
        </div>

        <div class="modal-body row">
          <div class="col-md-12 form-group">
            <%= render 'radio_buttons' %>

            <div class="forms">
              <!-- Councilors select -->
              <%= f.select :councilor_id, councilors_select, { include_blank: true }, { class: 'form-control councilor', data: { text: "Seleccione un concejal" } } %>

              <!-- Partisan block -->
              <%= f.select :partisan_block_id, blocks_select, { include_blank: true }, { class: 'form-control partisan_block', data: { text: "Seleccione un bloque partidario" } } %>

              <!-- Commission -->
              <%= f.select :commission_id, commissions_select, { include_blank: true }, { class: 'form-control commission', data: { text: "Seleccione una comision" } } %>

              <!-- Official distribution -->
              <div class="form-inline official_distribution">
                <%= f.select :official_distribution_id, {}, {}, { class: 'form-control', data: { text: "Busque Repartición Oficial" }, style: 'width: 82%' } %>
                <div class="btn btn-info"> <i class="fa fa-plus"></i> Agregar </div>
                <div class="btn btn-danger"> <i class="fa fa-times"></i> Cancelar </div>
              </div>
              <div class="form-group official_distribution_new">
                <hr/>
                <%= f.label :denomination, 'Nueva Repartición oficial' %>
                <div class="form-inline">
                  <%= f.text_field :denomination, class: 'form-control', placeholder: 'Ingrese repartición oficial', style: 'width: 82%' %>
                  <div class="btn btn-success"> <i class="fa fa-check"></i> Guardar </div>
                </div>
              </div>

              <!-- Municipal office -->
              <div class="municipal_office form-inline">
                <%= f.select :municipal_office_id, {}, {}, class: 'form-control', data: { text: 'Busque dependencia municipal' }, style: 'width: 82%' %>
                <div class="btn btn-info"> <i class="fa fa-plus"></i> Agregar </div>
                <div class="btn btn-danger"> <i class="fa fa-times"></i> Cancelar </div>
              </div>
              <div class="form-group municipal_office_new">
                <hr/>
                <%= f.label :denomination, 'Nueva Dependencia municipal' %>
                <div class="form-inline">
                  <%= f.text_field :denomination, class: 'form-control', data: { text: 'Ingrese repartición oficial' }, style: 'width: 82%' %>
                  <div class="btn btn-success"> <i class="fa fa-check"></i> Guardar </div>
                </div>
              </div>

              <!-- Particular pyshic -->
              <div class="particular_pyshic form-inline">
                <%= f.select :particular_pyshic_id, {}, {}, class: 'form-control', style: 'width: 82%', data: { text: 'Busque un particular físico por nombre o apellido' } %>
                <div class="btn btn-info"> <i class="fa fa-plus"></i> Agregar </div>
                <div class="btn btn-danger"> <i class="fa fa-times"></i> Cancelar </div>
              </div>
              <div class="form-group particular_pyshic_new">
                <hr/>
                <%= f.label :name, 'Nuevo Particular Físico' %>
                <div class="form-group">
                  <%= f.label :name, 'Nombre' %>
                  <%= f.text_field :name, class: 'form-control', placeholder: 'Nombre del particular' %>
                </div>
                <div class="form-group">
                  <%= f.label :surname, 'Apellido' %>
                  <%= f.text_field :surname, class: 'form-control', placeholder: 'Apellido del particular' %>
                </div>
                  <div class="btn btn-success pull-right"> <i class="fa fa-check"></i> Guardar </div>
              </div>

              <!-- Particular legal -->
              <div class="particular_legal form-inline">
                <%= f.select :particular_legal_id, {}, {}, class: 'form-control', style: 'width: 82%', data: { text: "Busque un particular físico por denominación" } %>
                <div class="btn btn-info"> <i class="fa fa-plus"></i> Agregar </div>
                <div class="btn btn-danger"> <i class="fa fa-times"></i> Cancelar </div>
              </div>
              <div class="form-group particular_legal_new">
                <hr/>
                <%= f.label :denomination, 'Nuevo Particular Físico' %>
                <div class="form-group">
                  <%= f.label :denomination, 'Denominación' %>
                  <%= f.text_field :denomination, class: 'form-control', placeholder: 'Nombre de la instutición o persona jurídica' %>
                </div>
                  <div class="btn btn-success pull-right"> <i class="fa fa-check"></i> Guardar </div>
              </div>

            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button class="btn btn-default" data-dismiss="modal" type="button">
            <div class="fa fa-times-circle"></div> Cancelar
          </button>
          <button class="btn btn-primary btn-lg" type="submit">
            <div class="fa fa-save fa-lg"></div> Confirmar
          </button>
        </div>

      <% end %>
    </div>
  </div>
</div>




