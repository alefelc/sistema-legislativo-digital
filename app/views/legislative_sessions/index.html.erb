<div id="sessions">
  <h2 class="text-center"> SESIONES </h2>

  <div class="box box-primary">
    <div class="box-header">
      <div class="row">
        <div class="col-md-4">
          <%= link_to new_legislative_session_path, class: 'btn btn-primary btn-lg' do %>
            <i class="fa fa-plus-circle fa-lg"></i>
            Nueva Sesión
          <% end -%>
        </div>
      </div>
    </div>
    <div class="box-body">
      <table class="table table-striped dataTable table-hover current-tr" id="session-table" data-source="<%= legislative_sessions_path(format: :json) %>">
        <thead>
          <tr>
            <th> Número </th>
            <th> Tipo de sesión </th>
            <th> Lugar </th>
            <th> Secreta? </th>
            <th> Orden del Día </th>
            <th> Fecha </th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>
