#person-edit

#people
  %h2
    Listado de personas cargadas en el sistema

  .box.box-primary
    .box-header
      = link_to print_people_path, class: 'btn btn-danger' do
        Print people
        %i.fa.fa-print
    .box-body
      %table.table.table-striped.table-hover#people-table{ style: 'table-layout: fixed; word-wrap: break-word;', 'data-source': persons_path(format: :json) }
        %thead
          %tr
            %th #
            %th= t('.type')
            %th= t('.name')
            %th= t('.surname')
            %th= t('.address')
            %th= t('.dni_cuit')
            %th= t('.phone')
            %th= t('.email')
            %th
        %tbody

:javascript
  People.IndexDataTable.init();
