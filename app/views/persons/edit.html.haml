#edit-person.modal.fade{ role: "dialog", tabindex: "-1" }
  .modal-dialog{ role: "document" }
    .modal-content
      = form_for @person, as: :person, url: person_path, remote: true do |f|

        .modal-header.bg-primary
          %button.close{ "aria-label": "Close", "data-dismiss": "modal", type: "go tobutton" }
            %span{ "aria-hidden": "true" } Ã—
          %h4.modal-title= t '.update_person'

        .modal-body
          .form-group
            = f.label :type
            = f.text_field :type, class: 'form-control', disabled: true
          .form-group
            = f.label :nombre
            = f.text_field :nombre, class: 'form-control'
          .form-group
            = f.label :apellido
            = f.text_field :apellido, class: 'form-control'
          .form-group
            = f.label :domicilio
            = f.text_field :domicilio, class: 'form-control'
          .form-group
            = f.label :nro_doc
            = f.text_field :nro_doc, class: 'form-control'
          .form-group
            = f.label :telefono
            = f.text_field :telefono, class: 'form-control'
          .form-group
            = f.label :email
            = f.text_field :email, class: 'form-control', type: 'email'

        .modal-footer
          = f.submit t('.update'), class: 'btn btn-primary', type: :submit

:javascript
$('#edit_person').submit(function() {
  $('#edit-person .modal').modal('hide');
  $('#people-table').dataTable().fnDraw();
});
