#person-show
  %section.invoice
    / title row
    .row
      .col-xs-12
        %h2.page-header
          %i.fa.fa-user
          = t '.personal_data'
          %small.pull-right= t '.created_at', date: @person.created_at
      / /.col
    / info row
    .row.invoice-info
      .col-xs-12
        %i= t ".#{@person.type}"
      .col-sm-6.invoice-col
        %address
          %strong= t '.name'
          = @person.nombre || '-.'
          %br/
          %strong= t '.surname'
          = @person.apellido || '-.'
          %br/
          %strong= t '.dni_cuit'
          = @person.nro_doc || '-.'
      / /.col
      .col-sm-6.invoice-col
        %address
          %strong= t '.address'
          = @person.domicilio || '-.'
          %br/
          %strong= t '.phone'
          = @person.telefono || '-.'
          %br/
          %strong= t '.email'
          = @person.email || '-.'

    %hr

    .row
      .col-xs-12.table-responsive
        %table.table.table-striped#person-tramites
          %thead
            %tr
              %th Nro
              %th Tramite
              %th Fojas
              %th Asunto / Solicitud
              %th Observaciones
              %th Actualizado el
          %tbody
            - @person.tramites.each do |t|
              %tr
                %td= link_to t.id, t
                %td= t.type
                %td= t.nro_fojas
                %td= t.asunto
                %td= t.observaciones
                %td= t.updated_at
          %tfoot
            %tr
              %td
              %td
              %td
              %td
              %td
              %td

    .row.no-print
      .col-xs-12
        %button.btn.btn-danger.pull-left{:style => "margin-right: 5px;", :type => "button"}
          %i.fa.fa-print
          Imprimir

:javascript
$(document).on('ready', function() {
  $('#person-tramites').dataTable({
    bServerSide: false
  });
});
