.modal.fade{ role: "dialog", tabindex: "-1" }
  .modal-dialog{ role: "document" }
    .modal-content
      = form_for @councilor, as: :councilor, url: councilor_path, remote: true do |f|

        .modal-header.bg-primary
          %button.close{ "aria-label": "Close", "data-dismiss": "modal", type: "go tobutton" }
            %span{ "aria-hidden": "true" } Ã—
          %h4.modal-title= t '.update_councilor'

        .modal-body
          .form-group
            = f.label :surname
            = f.text_field :surname, class: 'form-control'
          .form-group
            = f.label :name
            = f.text_field :name, class: 'form-control'
          .form-group
            = f.label :cuit_or_dni
            = f.text_field :cuit_or_dni, class: 'form-control'
          .form-group
            = f.label :address
            = f.text_field :address, class: 'form-control'
          .form-group
            = f.label :phone
            = f.text_field :phone, class: 'form-control'
          .form-group
            = f.label :email
            = f.text_field :email, class: 'form-control'

        .modal-footer
          = f.submit t('.update'), class: 'btn btn-primary', type: :submit
