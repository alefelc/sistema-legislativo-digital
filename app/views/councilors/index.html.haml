#councilors
  %h2
    Concejales

  .box.box-primary#procedures
    .box-header
      = render 'header_buttons'

    .box-body
      %table.table.table-striped#councilors-table{ style: 'table-layout: fixed; word-wrap: break-word;', 'data-source': councilors_path(format: :json) }
