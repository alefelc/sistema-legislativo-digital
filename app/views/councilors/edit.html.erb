<div class="session-new">
  <h2 class="text-center"> Editando Concejal </h2>

  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title"> Actualize Información del Concejal </h3>
    </div>

    <%= form_for @councilor, as: :councilor, url: councilor_path(@councilor), html: { multipart: true } do |f| %>

      <div class="box-body">
        <div class="form-group col-md-6">
          <%= f.label :surname %>
          <%= f.text_field :surname, class: 'form-control', placeholder: 'Ingrese Apellido' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Ingrese Nombre' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :cuit_or_dni %>
          <%= f.text_field :cuit_or_dni, class: 'form-control', placeholder: 'Ingrese DNI' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :address %>
          <%= f.text_field :address, class: 'form-control', placeholder: 'Ingrese Domicilio' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :phone %>
          <%= f.text_field :phone, class: 'form-control', placeholder: 'Ingrese Teléfono' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control', placeholder: 'Ingrese Email' %>
        </div>

        <div class="form-group col-md-6">
          <% if @councilor.picture.present? %>
            <div class="box-body box-profile">
              <img class="profile-user-img img-responsive" src="<%= @councilor.picture.file.url %>" alt="User profile picture">
            </div>
          <% end %>
          <%= f.label :picture_file, 'Actualize Foto' %>
          <%= f.text_field :picture_file, type: :file %>
        </div>

        <div class="form-group col-md-6">
          <div class="col-md-6">
            <%= f.label :cv_file, 'Actualize Currículum' %>
            <%= f.text_field :cv_file, type: :file %>
          </div>
          <div class="col-md-6">
            <% if @councilor.cv.present? %>
              <label> Descargar CV </label>
              <%= link_to @councilor.cv.file.url, class: 'btn btn-success', target: :_blank do %>
                <i class="fa fa-download"> </i>
              <% end %>
            <% end %>
          </div>
        </div>

        <div class="form-group col-md-6">
          <div class="col-md-6">
            <%= f.label :ddjj_file, 'Actualize DDJJ' %>
            <%= f.text_field :ddjj_file, type: :file %>
          </div>
          <div class="col-md-6">
            <% if @councilor.ddjj.present? %>
              <label> Descargar DDJJ </label>
              <%= link_to @councilor.ddjj.file.url, class: 'btn btn-success', target: :_blank do %>
                <i class="fa fa-download"> </i>
              <% end %>
            <% end %>
          </div>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :effective_time_from, 'Vigencia desde' %>
          <%= f.text_field :effective_time_from, type: :date, class: 'form-control', value: @councilor.effective_time_from.try(:to_default_s) %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :effective_time_to, 'Vigencia hasta' %>
          <%= f.text_field :effective_time_to, type: :date, class: 'form-control', value: @councilor.effective_time_to.try(:to_default_s) %>
        </div>
      </div>

      <div class="box-footer">
        <div class="pull-right">
          <%= link_to councilors_path, class: 'btn btn-default' do %>
            <i class="fa fa-times-circle"></i>
            Cancelar
          <% end -%>
          <%= button_tag type: :submit, class: 'btn btn-lg btn-success' do %>
            <i class="fa fa-save fa-lg"></i>
            Actualize Concejal
          <% end -%>
        </div>
      </div>
    <% end -%>
  </div>
</div>
