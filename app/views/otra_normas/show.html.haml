- content_for :title, "Otra Norma"
- otra = @otra_norma
- otra_me_modifican = otra.relationship_me_modifican.to_a
- otra_modifica = otra.relationship_modificadas.to_a
- circuitos = otra.circuitos
- entrada_vigencia = otra.entrada_vigencia
- finaliza_vigencia = otra.finaliza_vigencia
- plazo_vigencia = get_plazo_vigencia(otra)
- desc = otra.descripcion
- obs = otra.observaciones
- org = otra.organismo_origen
- tags = otra.tags

#otra_norma-show

  #otra_norma-header.row
    .col-md-5
      %h3.main-title= "#{t 'otra_normas.show.info', number: otra.nro, year: otra.anio}"
    .col-md-7.float-right.no-print
      .float-right
        %a#print-otra_norma.btn.btn-lg.btn-danger.fa.fa-print{ title: 'Imprimir Otra Norma' }
          Imprimir
        %a.btn.btn-lg.btn-primary.fa.fa-download{ title: 'Descargar Texto Original' }
          Texto Original

  #otra_norma-body
    .panel.panel-success
      .panel-heading Información de Otra Norma
      .panel-body
        %p
          %span.titles= "Sumario: "
          %span= otra.sumario

        %p.single-tab
          - unless circuitos.empty?
            %span= "Expedientes Legislativos: "
            - circuitos.each do |c|
              - if (c.nro == 0)
                %span= link_to(c.expediente.nro_exp + c.expediente.get_anio_expediente, "/expedientes/#{c.expediente.id}") + " - "
              - else
                %span= "Circuito nro: #{c.nro}--> Expediente: "
                %span= link_to(c.expediente.nro_exp + c.expediente.get_anio_expediente, "/expedientes/#{c.expediente.id}")
                %span= " - "

      %p.single-tab
        %span= get_sancion(otra)

      %p.single-tab
        - if entrada_vigencia.present?
          .single-tab.titles= "Vigencia: "
        - if entrada_vigencia.present?
          .double-tab= "Entra en vigencia el: " + to_date(entrada_vigencia).to_s
        - if finaliza_vigencia.present?
          .double-tab= "Finaliza vigencia el: " + to_date(finaliza_vigencia).to_s
        - else
          .double-tab= "Finaliza vigencia en: " + plazo_vigencia + " a partir de la entrada en vigencia"

      %p.single-tab
        - otra_me_modifican.select{ |x| x.tipo_relacion == "promul"}.each do |r|
          %span= "Promulgado el " + to_date(r.desde).to_s
          %span= link_to(" Decreto " + r.me_modifica.nro.to_s, r.me_modifica)

      %p.single-tab
        - otra.get_destinos(0).each do |d|
          %span= "Comunicada al " + d.destino.to_s + " el " + to_date(d.fecha).to_s

      %p.single-tab
        - otra.get_destinos(1).each do |d|
          %span= "Notificada a " + d.destino.to_s + " el " + to_date(d.fecha).to_s

      = render partial: "clasification_otra_norma", locals: { otra: otra }


