- content_for :title, "Norma Especial"
- esp = @especial
- esp_me_modifican = esp.relationship_me_modifican.to_a
- esp_modifica = esp.relationship_modificadas.to_a
- obs = esp.observaciones
- org = esp.organismo_origen
- tags = esp.tags

#especial-show

  #especial-header.row
    .col-md-5
      %h3.main-title= "#{t 'especials.show.info', number: esp.nro, year: esp.anio}"
    .col-md-7.float-right.no-print
      .float-right
        %a#print-especial.btn.btn-lg.btn-danger.fa.fa-print{ title: 'Imprimir Norma Especial' }
          Imprimir
        %a.btn.btn-lg.btn-primary.fa.fa-download{ title: 'Descargar Texto Original' }
          Texto Original

  #especial-body
    .panel.panel-success
      .panel-heading Información de la norma especial
      .panel-body

        %p
          %span.titles Sumario:
          %span= esp.sumario.present? ? esp.sumario : '-.'

        %p.single-tab
          - circuitos = esp.circuitos
            - unless circuitos.empty?
            %span= "Expedientes Legislativos: "
            - circuitos.each do |c|
              - if (c.nro == 0)
                %span= link_to(c.expediente.nro_exp + c.expediente.get_anio_expediente, "/expedientes/#{c.expediente.id}") + " - "
              - else
                %span= "Circuito nro: #{c.nro}--> Expediente: "
                %span= link_to(c.expediente.nro_exp + c.expediente.get_anio_expediente, "/expedientes/#{c.expediente.id}")
                %span= " - "

        %p.single-tab
          %span= get_sancion(esp)

        %p.single-tab
          - entrada_vigencia = esp.entrada_vigencia
          - finaliza_vigencia = esp.finaliza_vigencia
          - plazo_vigencia = get_plazo_vigencia(esp)
            - if entrada_vigencia.present?
            .single-tab.titles= "Vigencia: "
            - if entrada_vigencia.present?
              .double-tab= "Entra en vigencia el: " + to_date(entrada_vigencia).to_s
            - if finaliza_vigencia.present?
              .double-tab= "Finaliza vigencia el: " + to_date(finaliza_vigencia).to_s
            - else
              .double-tab= "Finaliza vigencia en: " + plazo_vigencia + " a partir de la entrada en vigencia"

        %p.single-tab
          - esp_me_modifican.select{ |x| x.tipo_relacion == "promul"}.each do |r|
            %span= "Promulgado el " + to_date(r.desde).to_s
            %span= link_to(" Decreto " + r.me_modifica.nro.to_s, r.me_modifica)

        %p.single-tab
          - esp.get_destinos(0).each do |d|
            %span= "Comunicada al " + d.destino.to_s + " el " + to_date(d.fecha).to_s

        %p.single-tab
          - esp.get_destinos(1).each do |d|
            %span= "Notificada a " + d.destino.to_s + " el " + to_date(d.fecha).to_s

        - desc = esp.descripcion
          - if desc.present?

        = render partial: "clasification_especial", locals: { esp: esp }



