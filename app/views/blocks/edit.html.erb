<h2 class="text-center">Editando nuevo bloque</h2>
<%= form_for @block, url: block_path(@block), html: { class: 'form-horizontal form-label-left input_mask' } do |f| %>
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title"> Informaci√≥n del bloque </h3>
    </div>
    <div class="box-body">
      <div class="form-group">
        <%= f.label :denominacion, class: 'control-label col-md-1 col-sm-1 col-xs-1' %>
        <div class="col-md-6 col-sm-6 col-xs-6">
          <%= f.text_field :denominacion, class: 'form-control input-lg', placeholder: 'Ingrese nombre de bloque' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :periodos, class: 'control-label col-md-1 col-sm-1 col-xs-1' %>
        <div class="col-md-4 col-sm-4 col-xs-4">
          <%= f.select :periodo_ids, Periodo.all.collect { |p| [ p, p.id ] }, {}, multiple: true, class: 'form-control input-lg', placeholder: 'Ingrese nombre de bloque' %>
        </div>
      </div>

    <div class="box-footer">
      <%= link_to blocks_path, class: 'pull-left btn btn-default' do %>
        <%= icon 'times', class: 'fa-lg' %>
        Cancelar
      <% end %>

      <button class="pull-right btn btn-success btn-lg" type="submit">
        <%= icon 'save', class: 'fa-lg' %>
        Guardar
      </button>
    </div>
 	</div>
<% end %>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    $('#bloque_periodo_ids').multiselect();
  });
</script>