<h2 class="text-center"> Editando comisión </h2>
<%= form_for @commission, url: commissions_path, html: { class: 'form-horizontal form-label-left input_mask' } do |f| %>
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title"> Información de la comisión </h3>
    </div>
    <div class="box-body">
      <div class="form-group">
        <%= f.label :denominacion, 'Nombre', class: 'control-label col-md-1 col-sm-1 col-xs-1' %>
        <div class="col-md-6 col-sm-6 col-xs-6">
          <%= f.text_field :denominacion, class: 'form-control input-lg', placeholder: 'Ingrese nombre de bloque' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :periodos, class: 'control-label col-md-1 col-sm-1 col-xs-1' %>
        <div class="col-md-4 col-sm-4 col-xs-4">
          <%= f.select :periodo_ids, Periodo.all.collect { |p| [ p, p.id ] }, {}, multiple: true, class: 'form-control input-lg', placeholder: 'Ingrese nombre de bloque' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :concejals, 'Concejales', class: 'control-label col-md-1 col-sm-1 col-xs-1' %>
        <div class="col-md-11 col-sm-11 col-xs-11">
          <table class="table table-striped table-bordered dataTable" id="commission-concejals">
            <thead>
              <th>Apellido</th>
              <th>Nombre</th>
            </thead>
          </table>
        </div>
      </div>

    <div class="box-footer">
      <%= link_to blocks_path, class: 'pull-left btn btn-default' do %>
        <%= icon 'times', class: 'fa-lg' %>
        Cancelar
      <% end %>

      <button class="pull-right btn btn-success btn-lg" type="submit">
        <%= icon 'save', class: 'fa-lg' %>
        Guardar
      </button>
    </div>
 	</div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('#comision_periodo_ids').multiselect();
    $('#commission-concejals').dataTable();
  });
</script>