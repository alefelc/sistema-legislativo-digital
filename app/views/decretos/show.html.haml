    .panel.panel-success
      .panel-heading Información de la Ordenanza
      .panel-body
        %p.single-tab
          %span.titles= "Sumario: "
          %span= @decreto.sumario.present? ? @decreto.sumario : '-.'
        %p
          .double-tab
            - if @decreto.sancion.present?
              %span= "Sancionado el #{to_date @decreto.sancion}"

        %p.single-tab
          - entrada_vigencia = dec.entrada_vigencia
          - finaliza_vigencia = dec.finaliza_vigencia
          - plazo_vigencia = get_plazo_vigencia(dec)
            - if entrada_vigencia.present?
            .single-tab.titles= "Vigencia: "
            - if entrada_vigencia.present?
              .double-tab= "Entra en vigencia el: #{to_date(entrada_vigencia)}"
            - if finaliza_vigencia.present?
              .double-tab= "Finaliza vigencia el: #{to_date(finaliza_vigencia)}"
            - else
              .double-tab= "Finaliza vigencia en: #{plazo_vigencia} a partir de la entrada en vigencia"

        %p.single-tab
          - circuitos = dec.circuitos
            - unless circuitos.empty?
            %span= "Expedientes Legislativos: "
            - circuitos.each do |c|
              - if (c.nro == 0)
                %span= link_to(c.expediente.nro_exp + c.expediente.get_anio_expediente, "/expedientes/#{c.expediente.id}") + " - "
              - else
                %span= "Circuito nro: #{c.nro}--> Expediente: "
                %span= link_to(c.expediente.nro_exp + c.expediente.get_anio_expediente, "/expedientes/#{c.expediente.id}")
                %span= " - "
        %p.single-tab
          - dec_me_modifican.select { |x| x.tipo_relacion == "promul"}.each do |r|
            %span= "Promulgado el " + to_date(r.desde).to_s
            %span= link_to(" Decreto " + r.me_modifica.nro.to_s, r.me_modifica)
        %p.single-tab
          - dec.get_destinos(0).each do |d|
            %span= "Comunicada al " + d.destino.to_s + " el " + to_date(d.fecha).to_s
        %p.single-tab
          - dec.get_destinos(1).each do |d|
            %span= "Notificada a " + d.destino.to_s + " el " + to_date(d.fecha).to_s

        = render partial: "clasification_decreto", locals: { dec: dec }

