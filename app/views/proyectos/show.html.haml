#proyecto-show
  %h4= t('proyectos.show.info')
  %hr
  #proyecto-body
    - pro = @proyecto
    %p
      %span.titles= "Nro.: "
      %span= pro.id
      %span
        &nbsp 
        %i.btn.btn-xs.btn-default.fa.fa-download{ title: "Descargar Proyecto"}
    - fojas = pro.get_fojas
      - if fojas.present?      
      %p.single-tab
        %span= "Nro. de Fojas: "
        %span= fojas
    - asunto = pro.get_asunto
      - if asunto.present?
      %p.single-tab
        %span.titles= "Asunto: "
        %span= asunto    
    - iniciadores_bloques = get_iniciadores_bloques(pro)
    - iniciadores_comisions = get_iniciadores_comisions(pro)
    - iniciadores_personas = get_iniciadores_personas(pro)
      - if iniciadores_bloques.present? || iniciadores_comisions.present? || iniciadores_personas.present?     
      %p.single-tab
        .single-tab.titles= "Iniciadores: "
        .double-tab.titles= "Bloques: "
        - iniciadores_bloques.each do |b|
          .double-tab= b[:denominacion]
        .double-tab.titles= "Comisiones: "
        - iniciadores_comisions.each do |b|
          .double-tab= b[:denominacion]
        .double-tab.titles= "Personas: "
        - iniciadores_personas.each do |b|
          .double-tab= b[:type] + ": " + b[:apellido] + ", " + b[:nombre]    
    - actualizado = pro.get_date_time
      - if actualizado.present?
      %p.single-tab
        %span= "Creado/Actualizado: "
        %span= to_date_time(actualizado)
    - obs = pro.get_observaciones
      - if obs.present?
      %p.single-tab
        %span= "Observaciones: "
        %span= obs