<div id="day_plans">
  <h2 class="text-center"> ORDENES DEL DIA </h2>

  <div class="box box-primary">
    <div class="box-header">
      <div class="row">
        <div class="col-md-4">
          <%= link_to new_day_plan_path, class: 'btn btn-primary btn-lg' do %>
            <i class="fa fa-plus-circle fa-lg"></i>
            Nueva Orden del día
          <% end -%>
        </div>
      </div>
    </div>
    <div class="box-body">
      <table class="table table-striped table-hover" id="day-plan-table" data-source="<%= day_plans_path(format: :json) %>">
        <thead>
          <tr>
            <th> Órden del Día </th>
            <th> Sesión </th>
            <th> Expedientes </th>
            <th> Definitiva? </th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>
