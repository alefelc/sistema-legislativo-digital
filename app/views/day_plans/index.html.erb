<div id="sessions">
  <h2 class="text-center"> ORDENES DEL DIA </h2>

  <div class="box box-primary">
    <div class="box-header">
      <div class="row">
        <div class="col-md-4">
          <%= link_to new_day_plan_path, class: 'btn btn-primary btn-lg' do %>
            <i class="fa fa-plus-circle fa-lg"></i>
            Nueva Orden del día
          <% end -%>
        </div>
      </div>
    </div>
    <div class="box-body">
      <table class="table table-striped table-hover" id="session-table" data-source="<%= legislative_sessions_path(format: :json) %>">
        <thead>
          <tr>
            <th> # </th>
            <th> Número </th>
            <th> Tipo de sesión </th>
            <th> Fecha </th>
            <th> Lugar </th>
            <th> Secreta? </th>
            <th> Observaciones </th>
            <th> </th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>
