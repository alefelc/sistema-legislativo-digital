<div class="authority-edit">
  <h2 class="text-center"> Editando Firmante </h2>

  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title"> Informaci√≥n del Firmante </h3>
    </div>

    <%= form_for @signatory, url: signator_path(@signatory) do |form| %>

      <div class="box-body">
        <%= render 'signatory_form', f: form %>
      </div>

      <div class="box-footer">
        <div class="pull-right">
          <%= link_to signators_path, class: 'btn btn-default' do %>
            <i class="fa fa-times-circle"></i>
            Cancelar
          <% end -%>
          <%= button_tag type: :submit, class: 'btn btn-lg btn-success' do %>
            <i class="fa fa-save fa-lg"></i>
            Guardar
          <% end -%>
        </div>
      </div>
    <% end -%>
  </div>
</div>
