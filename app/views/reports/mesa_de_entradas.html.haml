.modal.fade#reception{ role: 'dialog', tabindex: '-1' }
  = render partial: 'reception_filters'

#tramite
  .text-center
    %button.btn.btn-primary{ 'data-target': '#reception', 'data-toggle': 'modal' }
      %span.fa.fa-filter{ "aria-hidden": true }
      Filtrar datos
    - table_attr = { style: 'table-layout: fixed; word-wrap: break-word;',
                         'data-source' => reports_mesa_de_entradas_path(format: :json) }

    %button#btn-print.btn.btn-danger
      %span.glyphicon.glyphicon-print
      = t('.btnheader.print')
  %table.datatable-keyevents.table-hover#tramite-table{ table_attr }
    %thead
      %tr
        %th= t('.table.tramite')
        %th= t('.table.tipo')
        %th= t('.table.fojas')
        %th= t('.table.asunto')
        %th= t('.table.iniciadores')
        %th= t('.table.observaciones')
        %th= t('.table.actualizado')
    %tbody
