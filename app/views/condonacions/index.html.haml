#condonacion
  #condonacion-edit
  - if current_user.present?
    %button#btn-new.btn.btn-primary
      %span.glyphicon.glyphicon-plus-sign{ "aria-hidden": true }
      = t('.btnheader.new')

  %table.datatable-keyevents.table.table-striped.table-bordered#condonacion-table{style: "table-layout: fixed; word-wrap: break-word;", "data-source" => condonacions_path(format: :json)}
    %thead
      %tr
        %th= t('.table.condonacion')
        %th= t('.table.fojas')
        %th= t('.table.iniciadores')
        %th= t('.table.asunto')
        %th= t('.table.observaciones')
        %th= t('.table.actualizado')
        %th
    %tbody
