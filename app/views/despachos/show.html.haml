#despacho-show
  %h4= t('despachos.show.info')
  %hr
  #despacho-body
    - desp = @despacho
    %p
      %span.titles= "Nro.: "
      %span= desp.id
      %span
        &nbsp 
        %i.btn.btn-xs.btn-default.fa.fa-download{ title: "Descargar Despacho"}
    - fecha = desp.get_fecha
      - if fecha.present?  
      %p.single-tab
        %span= "Fecha: "
        %span= fecha
    - fojas = desp.get_fojas
      - if fojas.present?      
      %p.single-tab
        %span= "Nro. de Fojas: "
        %span= fojas
    - expedientes = desp.get_expedientes
      - unless expedientes.empty?
      %p.single-tab  
        %span= "Expedientes Legislativos: "
        - expedientes.each do |e|
          %span= link_to(e.nro_exp + e.get_anio_expediente, "/expedientes/#{e.id}") + " - "
    - comisiones = desp.get_comisiones
      - unless comisiones.empty?
      %p.single-tab  
        %span.titles= "Comisiones: "
        - comisiones.each do |c|
          .double-tab= c.denominacion
    - concejales = desp.get_concejales      
      - unless concejales.empty?
      %p.single-tab  
        %span.titles= "Concejales Firmantes: "
        - concejales.each do |c|
          .double-tab= c.apellido.to_s + ", " + c.nombre.to_s
    - obs = desp.get_observaciones
      - if obs.present?
      %p.single-tab
        %span= "Observaciones: "
        %span= obs      
    %p.single-tab
      .single-tab.titles= "Estados del tr√°mite: "
      .single-tab  
        %table.table.table-striped.table-bordered#states-table-show
          %thead
            %tr
              %th{style: "text-align:center;"}= "Estado"
              %th= "Fecha"
          %tbody
            - desp.estado_tramites.each do |x|
              - case x.tipo
              - when "1"
                %tr{ class: 'derivacion-tr-show', 'data-id': x.id, 'data-tipo': x.tipo}
                  %td= "Iniciado"
                  %td= to_date_time(x.created_at)  
              - when "2"
                - if (x.ref_type == 'Personal')
                  - text = x.ref.apellido.to_s + ", " + x.ref.nombre.to_s;
                - else
                  - text = x.ref.denominacion;   
                %tr{ class: 'derivacion-tr-show', 'data-id': x.id, 'data-tipo': x.tipo, 'data-idref': x.ref_id, 'data-typeref': x.ref_type }
                  %td= "Derivado a " + x.ref_type + ": " + text
                  %td= to_date_time(x.created_at)
              - when "3"
                %tr{ class: 'derivacion-tr-show', 'data-id': x.id, 'data-tipo': x.tipo}
                  %td= "Concluido en... " 
                  %td= to_date_time(x.created_at)
              - else