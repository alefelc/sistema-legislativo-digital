<div class="col-md-6">
  <div class="form-group form-group-lg">
    <%= f.label :email, 'Usuario:', class: 'control-label' %>
    <%= f.text_field :email, disabled: true, class: 'form-control' %>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label :password, 'Contraseña:', class: 'control-label' %>
    <%= f.text_field :password, class: 'form-control', type: :password %>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label :password_confirmation, 'Confirme contraseña:', class: 'control-label' %>
    <%= f.text_field :password_confirmation, class: 'form-control', type: :password %>
  </div>
</div>
