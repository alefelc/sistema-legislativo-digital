#declaracion
  #declaracion-edit

  - if current_user.present?
    %button#btn-new.btn.btn-primary
      %span.glyphicon.glyphicon-plus-sign{ "aria-hidden": true }
      = t('.btnheader.new')

  %table.datatable-keyevents.table.table-striped.table-bordered#declaracion-table{"data-source" => declaracions_path(format: :json)}
    %thead
      %tr
        %th= t('.table.declaracion')
        %th= t('.table.sumario')
        %th{width: "15%"}= t('.table.fechas')
        %th= t('.table.expedientes')
        %th
    %tbody
