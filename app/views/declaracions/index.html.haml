#declaracion
  #declaracion-edit
  %button#btn-new.btn.btn-primary{"data-toggle"=>"modal","data-target" => "#modaldecl"}
    %span.glyphicon.glyphicon-plus-sign{ "aria-hidden": true}
    = t('.btnheader.new')

  %table.table.table-striped.table-bordered#declaracion-table{"data-source" => declaracions_path(format: :json)}
    %thead
      %tr
        %th= t('.table.declaracion')
        %th= t('.table.sumario')
        %th= t('.table.fechas')
        %th= t('.table.expedientes')
        %th
    %tbody
  = render partial: "modal_declaration", locals: {actionvar: "create"}
