- content_for :title, "Declaración"
- decl = @declaracion
- decl_me_modifican = decl.relationship_me_modifican.to_a
- decl_modifica = decl.relationship_modificadas.to_a
- entrada_vigencia = decl.entrada_vigencia
- finaliza_vigencia = decl.finaliza_vigencia
- plazo_vigencia = get_plazo_vigencia(decl)
- desc = decl.descripcion
- obs = decl.observaciones
- org = decl.organismo_origen
- tags = decl.tags
- year   = @declaracion.sancion.year || ''

#declaracion-show

  #declaracion-header.row
    .col-md-5
      %h3.main-title= "#{t 'declaracions.show.info', number: decl.nro, year: year}"
    .col-md-7.float-right.no-print
      .float-right
        %a#print-declaracion.btn.btn-lg.btn-danger.fa.fa-print{ title: 'Imprimir Declaración' }
          Imprimir
        %a.btn.btn-lg.btn-primary.fa.fa-download{ title: 'Descargar Texto Original' }
          Texto Original

  #declaracion-body
    .panel.panel-success
      .panel-heading Información de la Declaración
      .panel-body
        %p.single-tab
          %span.titles Sumario:
          = decl.sumario.present? ? decl.sumario : '-.'

        %p.single-tab
          - circuitos = decl.circuitos
            - unless circuitos.empty?
            %span= "Expedientes Legislativos: "
            - circuitos.each do |c|
              - if (c.nro == 0)
                %span= link_to(c.expediente.nro_exp + c.expediente.get_anio_expediente, "/expedientes/#{c.expediente.id}") + " - "
              - else
                %span= "Circuito nro: #{c.nro}--> Expediente: "
                %span= link_to(c.expediente.nro_exp + c.expediente.get_anio_expediente, "/expedientes/#{c.expediente.id}")
                %span= " - "

        %p.single-tab
          - if entrada_vigencia.present?
            .single-tab.titles= "Vigencia: "
            .double-tab= "Entra en vigencia el: " + to_date(entrada_vigencia).to_s
          - if finaliza_vigencia.present?
            .double-tab= "Finaliza vigencia el: " + to_date(finaliza_vigencia).to_s
          - if decl.plazo_dia.present? || decl.plazo_mes.present? || decl.plazo_anio.present?
            .double-tab= "Finaliza vigencia en: " + plazo_vigencia + " a partir de la entrada en vigencia"

        %p.single-tab
          - decl_me_modifican.select { |x| x.tipo_relacion == "promul" }.each do |r|
            %span= "Promulgado el " + to_date(r.desde).to_s
            %span= link_to(" Decreto " + r.me_modifica.nro.to_s, r.me_modifica)
        %p.single-tab
          - decl.get_destinos(0).each do |d|
            %span= "Comunicada al " + d.destino.to_s + " el " + to_date(d.fecha).to_s
        %p.single-tab
          - decl.get_destinos(1).each do |d|
            %span= "Notificada a " + d.destino.to_s + " el " + to_date(d.fecha).to_s

        = render partial: "clasification_declaration", locals: { decl: decl }

