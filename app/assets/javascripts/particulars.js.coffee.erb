$(document).on 'ready page:load', ->
  $('#particular-table').dataTable
    ajaxSource: $('#particular-table').data('source')
    fnInitComplete: ->
      $('#particular div.dataTables_filter input').focus()
      $('#btn-new').prependTo('#particular-table_wrapper .col-sm-6:first')
      return
    fnDrawCallback: ->
      $('#particular-table tbody tr:eq(0)').addClass 'info'
      return
    aoColumns: [
      { sortable: false, "width": "10%" , sClass: "center"}
      { sortable: false, "width": "10%" }
      { sortable: false }
      { sortable: false }
      { sortable: false }
      { sortable: false, "width": "14%" }
      { sortable: false, "width": "8%" }
    ]

  $('#particular #btn-new').on 'click', ->
    $(document).off 'keydown'
    $.get '/particulars/new', (data) ->
      $('#particular-edit').empty()
      $('#particular-edit').append data
      $('#particular-edit .modal').modal 'show'
      return

  $(document).on 'click', '#particular #btn_add_iniciador', (event) ->
    event.preventDefault()
    return

  $(document).on 'click', '#particular #btn_edit_iniciador', (event) ->
    event.preventDefault()
    return

  $(document).on 'click', '#particular .linktoedit', ->
    $(document).off 'keydown'
    id = $(this).data 'id'
    $('#particular-edit').empty()
    $.get "/particulars/#{id}/edit", (data) ->
      $('#particular-edit').append data
      $('#particular-edit .modal').modal 'show'

      ## Preload iniciadores-tokens
      tokenData = $('#particular #process_iniciadores').data 'load'
      iniciadores = [];
      $.each tokenData, (index, ini) ->
        if(ini.type == "Fisica" || ini.type == "Juridica" || ini.type == "Concejal")
          iniciadores.push({id: ini.id, nombre: ini.nombre, apellido: ini.apellido, nro_doc: ini.nro_doc, telefono: ini.telefono, email: ini.email, domicilio: ini.domicilio, cuit: ini.cuit, type: ini.type})
        else
          ## otro caso
        return
      $('#particular #process_iniciadores').select2('data', iniciadores)

      return

  ## hotkey create particular
  $.ctrl 'C', ->
    $('#particular #btn-new').click()
    return

  ## hotkey edit particular
  $.ctrl 'E', ->
    $('#particular table tbody').find('.info').find('.linktoedit').click()
    return

  $('#particular-show #print-particular').on 'click', ->
    $('#particular-show').print
      globalStyles: true
      mediaPrint: false
      stylesheet: null
      noPrintSelector: '.no-print'
      iframe: true
      append: null
      manuallyCopyFormValues: true
      deferred: $.Deferred()
      timeout: 250

  ## hotkey print particular
  $.ctrl 'P', ->
    $('#particular-show #print-particular').click()
    return

  $('#particular-show').on 'ajax:success', '.particular-edit', (XHR, data, success) ->
    $('#particular-edit').html data
    $('#particular-edit .modal').modal 'show'

    ## Preload iniciadores-tokens
    tokenData = $('#particular-show #process_iniciadores').data 'load'
    iniciadores = [];
    $.each tokenData, (index, ini) ->
      if(ini.type == "Fisica" || ini.type == "Juridica" || ini.type == "Concejal")
        iniciadores.push({id: ini.id, nombre: ini.nombre, apellido: ini.apellido, nro_doc: ini.nro_doc, telefono: ini.telefono, email: ini.email, domicilio: ini.domicilio, cuit: ini.cuit, type: ini.type})
      else
        if(ini.type == "ReparticionOficial" || ini.type == "Comision" || ini.type == "Bloque")
          iniciadores.push({id: ini.id, denominacion: ini.denominacion, type: ini.type})
        else
          ## otro caso
      return
    $('#particular-show #process_iniciadores').select2('data', iniciadores)

    return
