$(document).on 'ready page:load', ->
  $('#norma-table').dataTable
    ajaxSource: $('#norma-table').data('source')
    fnInitComplete: ->
      $('#norma div.dataTables_filter input').focus()
      $('#norma div.dataTables_filter input').attr('placeholder', "<%= I18n.t('.datatable.search') %>")
      return
    fnDrawCallback: ->
      $('#norma-table tbody tr').find('td:eq(1)').each ->
        $(this).text $(this).text().substring(0, 125) + '...'
        return
      $('#norma-table tbody tr:eq(0)').addClass 'info'
      return
    aoColumns: [
      { sortable: false, "width": "12%" , sClass: "center"}
      { sortable: false }
      { sortable: false }
      { sortable: false, "width": "14%" }
    ]