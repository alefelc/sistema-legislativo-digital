$(document).on 'ready page:load', ->
  $('#condonacion-table').dataTable
    ajaxSource: $('#condonacion-table').data('source')
    fnInitComplete: ->
      $('#condonacion div.dataTables_filter input').focus()
      $('#condonacion div.dataTables_filter input').attr('placeholder', "<%= I18n.t('.datatable.search') %>")
      return
    fnDrawCallback: ->
      $('#condonacion-table tbody tr:eq(0)').addClass 'info'
      return
    aoColumns: [
      { sortable: false, "width": "1%" , sClass: "center"}
      { sortable: false }
      { sortable: false }
      { sortable: false }
      { sortable: false }
      { sortable: false, "width": "14%" }
      { sortable: false, "width": "1%" }
    ]

  $(document).on 'click', '#condonacion .remove-tr', ->
    id = $(this).data 'remove'
    if confirm('Desea eliminar la condonacion?')
      $.ajax
        url: "/condonaciones/#{id}"
        type: 'DELETE'
        success: (result) ->
          window.location.href = result.url
          return

  $('#condonacion #btn-new').on 'click', ->
    $(document).off 'keydown'
    $.get '/condonaciones/new', (data) ->
      $('#condonacion-edit').empty()
      $('#condonacion-edit').append data
      $('#condonacion-edit .modal').modal 'show'
      return

  $(document).on 'click', '#condonacion .linktoedit', ->
    $(document).off 'keydown'
    id = $(this).data 'id'
    $('#condonacion-edit').empty()
    $.get "/condonaciones/#{id}/edit", (data) ->
      $('#condonacion-edit').append data
      $('#condonacion-edit .modal').modal 'show'

  ## hotkey create condonacion
  $.ctrl 'C', ->
    $('#condonacion #btn-new').click()
    return

  ## hotkey edit condonacion
  $.ctrl 'E', ->
    $('#condonacion table tbody').find('.info').find('.linktoedit').click()
    return

  ## hotkey delete condonacion
  $.ctrl 'D', ->
    $('#condonacion table tbody').find('.info').find('.remove-tr').click()
    return
