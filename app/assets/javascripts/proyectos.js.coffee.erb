$(document).on 'ready page:load', ->
  $('#proyecto-table').dataTable
    ajaxSource: $('#proyecto-table').data('source')
    fnInitComplete: ->
      $('#proyecto div.dataTables_filter input').focus()
      $('#proyecto div.dataTables_filter input').attr('placeholder', "<%= I18n.t('.datatable.search') %>")
      return
    fnDrawCallback: ->
      $('#proyecto-table tbody tr:eq(0)').addClass 'info'
      return
    aoColumns: [
      { sortable: false, "width": "10%" , sClass: "center"}
      { sortable: false, "width": "10%" }
      { sortable: false }
      { sortable: false }
      { sortable: false }
      { sortable: false, "width": "14%" }
      { sortable: false, "width": "8%" }
    ]

  $('#proyecto #btn-new').on 'click', ->
    $(document).off 'keydown'
    $.get '/proyectos/new', (data) ->
      $('#proyecto-edit').empty()
      $('#proyecto-edit').append data
      $('#proyecto-edit .modal').modal 'show'
      return

  $(document).on 'click', '#proyecto #btn_add_iniciador', (event) ->
    event.preventDefault()
    return

  $(document).on 'click', '#proyecto #btn_edit_iniciador', (event) ->
    event.preventDefault()
    return

  $(document).on 'click', '#proyecto .linktoedit', ->
    $(document).off 'keydown'
    id = $(this).data 'id'
    $('#proyecto-edit').empty()
    $.get "/proyectos/#{id}/edit", (data) ->
      $('#proyecto-edit').append data
      $('#proyecto-edit .modal').modal 'show'

      ## Preload iniciadores-tokens
      tokenData = $('#proyecto #proyecto_iniciadores').data 'load'
      iniciadores = [];
      $.each tokenData, (index, ini) ->
        if(ini.type == "Fisica" || ini.type == "Juridica" || ini.type == "Concejal")
          iniciadores.push({id: ini.id, nombre: ini.nombre, apellido: ini.apellido, nro_doc: ini.nro_doc, telefono: ini.telefono, email: ini.email, domicilio: ini.domicilio, cuit: ini.cuit, type: ini.type})
        else
          if(ini.type == "ReparticionOficial" || ini.type == "DependenciaMunicipal" || ini.type == "OrganoDeGobierno" || ini.type == "Area" || ini.type == "Comision" || ini.type == "Bloque")
            iniciadores.push({id: ini.id, denominacion: ini.denominacion, type: ini.type})  
          else
            ## otro caso
        return
      $('#proyecto #proyecto_iniciadores').select2('data', iniciadores)

      return

  ## hotkey create proyecto
  $.ctrl 'C', ->
    $('#proyecto #btn-new').click()
    return

  ## hotkey edit proyecto
  $.ctrl 'E', ->
    $('#proyecto table tbody').find('.info').find('.linktoedit').click()
    return
