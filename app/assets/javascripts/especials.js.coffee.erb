$(document).on 'ready page:load', ->
  $('#especial-table').dataTable
    ajaxSource: $('#especial-table').data('source')
    fnInitComplete: ->
      $('#especial div.dataTables_filter input').focus()
      $('#especial div.dataTables_filter input').attr('placeholder', "<%= I18n.t('.datatable.search') %>")
      return
    fnDrawCallback: ->
      $('#especial-table tbody tr').find('td:eq(1)').each ->
        $(this).text $(this).text().substring(0, 125) + '...'
        return
      $('#especial-table tbody tr:eq(0)').addClass 'info'
      return
    aoColumns: [
      { sortable: false, "width": "12%" , sClass: "center"}
      { sortable: false }
      { sortable: false }
      { sortable: false, "width": "14%" }
      { sortable: false, "width": "1%" }
    ]

  $(document).on 'click', '#especial #add_disp', ->
    flagTokenInput = false
    $.each $('#especial #norma').tokenInput('get'), (index, element) ->
      flagTokenInput = true
      ref_type = $('#especial #refer_type  option:selected').text()
      dates = ""
      tipo_rel = $('#especial #refer_type  option:selected').val()
      date_desde = $("#especial #from_refer").val()
      date_hasta = $("#especial #to_refer").val()
      if date_desde != ""
        dates = dates + "Desde " + date_desde + "\n"
      if date_hasta != ""
          dates = dates + "Hasta " + date_hasta + "\n"
      date_hasta_dia = $("#especial #day_refer").val()
      date_hasta_mes = $("#especial #month_refer").val()
      date_hasta_anio = $("#especial #year_refer").val()
      date_tipo_dia = $("#especial [name=tipo_dia]:checked").val()
      row = "<tr class='linked-normas-table' data-id='#{this.id}'" +
      " data-desde='#{date_desde}' data-hasta='#{date_hasta}' data-hasta-dia='#{date_hasta_dia}'" +
      " data-hasta-mes='#{date_hasta_mes}' data-hasta-anio='#{date_hasta_anio}' " +
      "data-tipo-relacion='#{tipo_rel}' " +
      "data-dia-tipo='#{date_tipo_dia}'> " +
      "<td> #{ref_type} </td> " +
      "<td> #{this.indice} </td>" +
      "<td> #{dates} </td>" +
      "<td> <i class='fa fa-times remove-table-row btn btn-xs'></i> </td> </tr>"
      $('#especial #disp_norma_table tbody').append(row)
    if flagTokenInput
      $('#especial #norma').tokenInput 'clear'
      $('#especial #from_refer').val ''
      $('#especial #to_refer').val ''
      $('#especial #day_refer').val ''
      $('#especial #month_refer').val ''
      $('#especial #year_refer').val ''
    else
      alert "<%= I18n.t('especials.modal_especial.alert.norma_has_linked') %>"

  $(document).on 'click', '#especial #add_destiny', ->
    if $("#especial #destiny").val() == "" || $("#especial #destiny_date").val() == ""
      alert("Destino o Fecha no pueden estar vacios")
      return
    destiny = $("#especial #select_destiny option:selected")
    row = "<tr data-value='#{destiny.val()}' data-destiny='#{$('#destiny').val()}'" +
          " data-date='#{$('#destiny_date').val()}' class='destiny-row'>" +
          "<td> #{destiny.text()} </td>" +
          "<td> #{$('#destiny').val()} </td>" +
          "<td> #{$('#destiny_date').val()} " +
          "<td> <i class='fa fa-times remove-table-row btn btn-xs'></i> </td> </tr>"
    $('#especial #destinies_table tbody').append(row)
    $("#especial #destiny").val('')
    $("#especial #destiny_date").val('')

  $(document).on 'click', '#especial #classify', ->
    $('#especial #nuevoLabel').text("<%=I18n.t('especials.modal_especial.title.clasification')%>")
    $('#especial #classify').css('display','none')
    $('#especial #dates').css('display','inline-block')
    $('#especial #second-column').fadeOut(100)
    setTimeout (->
      $('#especial .clasification').fadeIn(100)
      return
    ), 250
    $('#especial .dates').fadeOut(100)
    setTimeout (->
      return
    ), 250

  $(document).on 'click', '#especial #ready', ->
    $('#especial #nuevoLabel').text("<%=I18n.t('especials.modal_especial.title.create_especial')%>")
    $('#especial #classify').css('display','inline-block')
    $('#especial #dates').css('display','inline-block')
    $('#especial .clasification').fadeOut(100)
    setTimeout (->
      $('#especial #second-column').fadeIn(100)
      return
    ), 250
    $('#especial .dates').fadeOut(100)
    setTimeout (->
      $('#especial #second-column').fadeIn(100)
      return
    ), 250

  $(document).on 'click', '#especial #dates', ->
    $('#especial #nuevoLabel').text("<%=I18n.t('especials.modal_especial.btn_clasification.dates')%>")
    $('#especial #dates').css('display','none')
    $('#especial #classify').css('display','inline-block')
    $('#especial #second-column').fadeOut(100)
    setTimeout (->
      $('#especial .dates').fadeIn(100)
      return
    ), 250
    $('#especial .clasification').fadeOut(100)
    setTimeout (->
      return
    ), 250

  $('#especial #btn-new').on 'click', ->
    $(document).off 'keydown'
    $.get '/especials/new', (data) ->
      $('#especial-edit').empty()
      $('#especial-edit').append data
      $('#especial-edit .modal').modal 'show'
      return

  $(document).on 'click', '#especial .linktoedit', ->
    $(document).off 'keydown'
    id = $(this).data 'id'
    $('#especial-edit').empty()
    $.get "/especials/#{id}/edit", (data) ->
      $('#especial-edit').append data
      $('#especial-edit .modal').modal 'show'

      ## Preload token inputs
      tokenData = $('#especial #exped_token').data 'load'
      $.each tokenData, (index, exp) ->
        $('#especial #exped_token').tokenInput 'add', exp
        return

      tokenTag = $('#especial #tags-tokeninput').data 'load'
      $.each tokenTag, (index, tag) ->
        $('#especial #tags-tokeninput').tokenInput 'add', tag
        return

      return

  ## hotkey create especial
  $.ctrl 'C', ->
    $('#especial #btn-new').click()
    return

  ## hotkey edit especial
  $.ctrl 'E', ->
    $('#especial table tbody').find('.info').find('.linktoedit').click()
    return
